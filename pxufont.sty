%% \pxuf@edef@detokenized\CS{<body>}
\def\pxuf@edef@detokenized#1{%
  \def\pxuf@tmpx{%
    \expandafter\pxuf@edef@detokenized@a\meaning#1\pxuf@end#1}%
  \afterassignment\pxuf@tmpx\edef#1}
\def\pxuf@edef@detokenized@a#1>#2\pxuf@end#3{%
  \def#3{#2}}

